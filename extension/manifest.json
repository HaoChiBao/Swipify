{
  "manifest_version": 3,
  "name": "000 - Swipify",
  "description": "Swipe through products like Tinder and make shopping fast, fun, and effortless on any site.",
  "version": "0.1.8",

  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["/app/*", "/auth/*", "/images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/images/icon16.png"
    }
  },
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon16.png",
    "128": "/images/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./app/content/content.js"
      ],
      "css": [
        "./app/content/css/content.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
